<?xml version="1.0" encoding="utf-8"?>
<!---
"Transparent" Skin for the VisualModuleLoader component to be used with
non visual modules.
-->
<s:Skin 
   xmlns:fx="http://ns.adobe.com/mxml/2009"
   xmlns:s="library://ns.adobe.com/flex/spark"
   width="100%"
   height="100%"
   >
   <fx:Metadata>
      [HostComponent("com.adobe.cairngorm.module.ModuleViewLoader")]
   </fx:Metadata>
   
   <s:states>
      <s:State name="normal"/>
      <s:State name="disabled"/>
      <s:State name="loading"/>
      <s:State name="error"/>
      <s:State name="loaded"/>
   </s:states>
   
   <s:Group 
      id="contentGroup"
      includeIn="loaded"
      width="100%"
      height="100%"
      />
</s:Skin>
