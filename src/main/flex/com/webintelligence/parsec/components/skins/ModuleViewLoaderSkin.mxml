<?xml version="1.0" encoding="utf-8"?>
<!---
    Skin for the VisualModuleLoader component.
-->
<s:Skin 
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"

    >
    <fx:Metadata>
        [HostComponent("com.adobe.cairngorm.module.ModuleViewLoader")]
    </fx:Metadata>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
        <s:State name="loading"/>
        <s:State name="error"/>
        <s:State name="loaded"/>
    </s:states>

    <s:HGroup 
        id="loadingGroup"
        left="0" 
        right="0" 
        top="0" 
        bottom="0"
        includeIn="loading"
        />

    <s:Group 
        id="errorGroup"
        left="0" 
        right="0"
        top="0" 
        bottom="0"
        includeIn="error"
        />

    <s:Group 
        id="contentGroup"
        includeIn="loaded"
        left="0" 
        right="0" 
        top="0" 
        bottom="0"
        />
</s:Skin>
